<%= form_with model: @character do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :age %>
    <%= f.text_field :age %><br>
    <%= f.label :category, 'Class:'%>
    <%= f.collection_check_boxes :category_id, Category.all, :id, :name %><br>
    <%= f.label :race %>
    <%= f.collection_check_boxes :race_id, Race.all, :id, :name %><br>
    <%= f.label :description%>
    <%= f.text_area :description %><br>
    <%= f.label :weapon %>
    <%= f.collection_check_boxes :weapon_ids, @weapons, :id, :name %><br>
    <%= f.submit "Update Characters" %>
    <%= f.submit %>

<% end %>

<%= link_to 'Delete Character', characters_path(@character), method: "delete" %>