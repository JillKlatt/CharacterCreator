<%= form_with model: [@adventure, @character] do |f| %>
    <%= f.hidden_field :user_id, value: current_user.id%>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :age %>
    <%= f.text_field :age %><br>
    <%= f.label :description %>
    <%= f.text_area :description %><br>

    <%= f.label :race, "Race:" %><br>
     <% @races.each do |race| %>
                <%= f.radio_button :race_id, race.id%><data-toggle="tooltip" data-placement="top" title="<%=race.jills_opinion%>"> <%=race.name%> <br>
                    <% end %>
                    <br>
    <%= f.label :category, "Class:" %><br>
     <% @categories.each do |category| %>
                <%= f.radio_button :category_id, category.id%><data-toggle="tooltip" data-placement="top" title="<%=category.jills_opinion%>"> <%=category.name%> <br>
                    <% end %>
                    <br>
    <% if @campaign %>
        <%= f.hidden_field :campaign_id, value: @campaign.id %>
        <% end %>
    <%= f.submit %>

    <% end %>