<%= form_with model: @character do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :age %>
    <%= f.text_field :age %><br>
    <%= f.label :description %>
    <%= f.text_area :description %><br>
    <%= f.label :category, "Class:" %>
     <% @categories.each do |category| %>
                <%= f.radio_button :category_id, category.id%><%= category.name%> <br>
                    <% end %>
    <%= f.label :race %>
     <% @races.each do |race| %>
                <%= f.radio_button :race_id, race.id%><%= race.name%> <br>
                    <% end %>


    <%= f.submit %>

    <% end %>