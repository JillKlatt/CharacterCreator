

<h1>Let's Create a New Character!</h1>

<%= form_with model: @character do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :age %>
    <%= f.text_field :age %><br>
    <%= f.label :description %>
    <%= f.text_area :description %><br>
    <%= f.label :category, "Class:" %>
    <%= f.text_field :category %><br>
    <%= f.label :race %>
    <%= f.text_field :race %><br>

    <%= f.submit %>

<% end %>


