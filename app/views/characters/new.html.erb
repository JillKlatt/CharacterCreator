

<h1>Let's Create a New Character!</h1>

<%= form_with model: @character do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :age %>
    <%= f.text_field :age %><br>
    <%= f.label :description %>
    <%= f.text_area :description %><br>
    <%= f.label :category, "Class:" %>
    <%= f.collection_check_boxes :category_id, Category.all, :id, :name %><br>
    <%= f.label :race %>
    <%= f.collection_check_boxes :race_id, Race.all, :id, :name %><br>

    <%= f.submit %>

<% end %>


